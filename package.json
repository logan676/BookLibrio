{
  "name": "booklibrio",
  "version": "0.1.0",
  "private": true,
  "description": "BookLibrio - Your Personal Digital Library",
  "workspaces": [
    "packages/shared",
    "packages/web",
    "packages/api"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@booklibrio/web",
    "dev:api": "npm run dev --workspace=@booklibrio/api",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "npm run build --workspace=@booklibrio/web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "upload:s3": "node scripts/upload-to-s3.js",
    "upload:s3:dry": "node scripts/upload-to-s3.js --dry-run"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
